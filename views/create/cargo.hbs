<body>
    <div style = "position:relative; left:6px;">
        <h1>Добавление груза</h1>
        <form method="POST">
            <label>Номер</label><br>
            <input name="id" class="field"/><br><br>
            <label>Название</label><br>
            <input name="name" class="field" required/><br><br>
            <label>Тип груза</label><br>
            <select name="cargotype" required>
                {{#each cargotypes}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <br><br>
            <input type="submit" value="Отправить" />
        </form>

        <form action="/cargos" method="GET" style="display:inline;">
            <input type="submit" value="Вернуться" />
        </form>
    </div>
</body>