<body>
    <div style = "position:relative; left:6px;">
        <h1>Добавление отправки</h1>
        <form method="POST">
            <label>Номер</label><br>
            <input name="id" class="field"/><br><br>

            <label>Пользователь</label><br>
            <select name="user" required>
                {{#each shipment.[0]}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select><br><br>

            <label>Станция отправитель</label><br>
            <select name="startingstation" required>
                {{#each shipment.[1]}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select><br><br>

            <label>Станция получатель</label><br>
            <select name="destinationstation" required>
                {{#each shipment.[2]}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select><br><br>

            <label>Состав</label><br>
            <select name="train" required>
                {{#each shipment.[3]}}
                <option value="{{id}}">{{id}}</option>
                {{/each}}
            </select><br><br>

            <label>Статус</label><br>
            <select name="shipmentstatus" required>
                {{#each shipment.[4]}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select><br><br>

            <br><br>
            <input type="submit" value="Отправить" />
        </form>

        <form action="/cargos" method="GET" style="display:inline;">
            <input type="submit" value="Вернуться" />
        </form>
    </div>
</body>